<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
      prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="julia_set_paquage.controller.Controller_interface_main">
    <children>


        <!-- debut Image view -->
        <ImageView fx:id="imageView_image" fitHeight="785.0" fitWidth="785.0" layoutX="7.5" layoutY="7.5" opacity="0.8"
                   pickOnBounds="true" preserveRatio="true">
            <effect>
                <DropShadow/>
            </effect>
        </ImageView>
        <!-- fin Image view -->


        <!--Control panel -->
        <AnchorPane layoutX="794.0" prefHeight="790.0" prefWidth="200.0" styleClass="AnchorPane">
            <children>

                <!--titre-->
                <Label layoutX="33.0" layoutY="17.0" text="Fractal Set" textFill="#2196f3">
                    <font>
                        <Font name="Arial" size="28.0"/>
                    </font>
                </Label>


                <GridPane layoutY="90.0" prefWidth="200.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>

                        <JFXTextField fx:id="textField_real" alignment="CENTER" focusColor="#2196f3" prefWidth="200.0"
                                      promptText="Réel" unFocusColor="#898989"/>

                        <JFXTextField fx:id="textField_img" alignment="CENTER" focusColor="#2196f3" promptText="Img"
                                      unFocusColor="#898989" GridPane.rowIndex="1"/>

                        <JFXRadioButton fx:id="radioButton_julia" onAction="#action_chooseJulia" prefWidth="200.0"
                                        selected="true" selectedColor="#2196f3" text="Julia set"
                                        unSelectedColor="#2196f3" GridPane.rowIndex="3">
                            <toggleGroup>
                                <ToggleGroup fx:id="choose_set"/>
                            </toggleGroup>

                        </JFXRadioButton>

                        <JFXRadioButton fx:id="radioButton_mandelbrot" onAction="#action_chooseMandelbrot"
                                        prefWidth="200.0" selectedColor="#2196f3" text="Mandelbrot set"
                                        toggleGroup="$choose_set" unSelectedColor="#2196f3" GridPane.rowIndex="4"/>

                        <JFXColorPicker fx:id="colorPicker_convergence" editable="true" prefHeight="27.0"
                                        prefWidth="95.0" GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>
                        <JFXCheckBox fx:id="checkBox_color" checkedColor="#2196f3" onAction="#action_set_color"
                                     text="Couleur" unCheckedColor="#2196f3" GridPane.halignment="LEFT"
                                     GridPane.rowIndex="6"/>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </GridPane>


                <!--grid 1 -->
                <GridPane layoutX="2.0" layoutY="570.0" prefHeight="230.0" prefWidth="200.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>

                        <JFXButton fx:id="btn_calculer" buttonType="RAISED" onAction="#calculer" prefHeight="50.0"
                                   prefWidth="200.0" styleClass="JFXButton" text="Calculer">
                            <font>
                                <Font name="Arial Bold" size="13.0"/>
                            </font>
                        </JFXButton>

                        <JFXButton fx:id="btn_save_png" buttonType="RAISED" onAction="#save_png" prefHeight="30.0"
                                   prefWidth="200.0" styleClass="JFXButton" text="Save PNG" GridPane.rowIndex="2">
                            <font>
                                <Font name="Arial Bold" size="13.0"/>
                            </font>
                        </JFXButton>


                        <JFXButton fx:id="btn_quitter" buttonType="RAISED" cancelButton="true" onAction="#quiter"
                                   prefHeight="30.0" prefWidth="200.0" styleClass="JFXButton" text="Quitter"
                                   GridPane.rowIndex="4">
                            <font>
                                <Font name="Arial Bold" size="13.0"/>
                            </font>
                        </JFXButton>
                        <JFXButton fx:id="btn_reset" buttonType="RAISED" onAction="#reset" prefHeight="30.0"
                                   prefWidth="200.0" styleClass="JFXButton" text="Réinitialiser" GridPane.rowIndex="3">
                            <font>
                                <Font name="Arial Bold" size="13.0"/>
                            </font>
                        </JFXButton>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </GridPane>
                <JFXTextField fx:id="textField_maxIteration" alignment="CENTER" focusColor="#2196f3" layoutX="3.0"
                              layoutY="496.0" prefWidth="200.0" promptText="Max Iteration" unFocusColor="#898989">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </JFXTextField>
                <JFXSlider fx:id="slider_moveX" blockIncrement="0.1" layoutY="367.0" majorTickUnit="5.0" max="5.0"
                           min="-5.0" minorTickCount="10" prefWidth="200.0" showTickLabels="true" showTickMarks="true"
                           styleClass="jfx-slider">
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </JFXSlider>
                <JFXSlider fx:id="slider_moveY" blockIncrement="0.1" layoutY="430.0" majorTickUnit="5.0" max="5.0"
                           min="-5.0" minorTickCount="10" prefWidth="200.0" showTickLabels="true" showTickMarks="true"
                           styleClass="jfx-slider">
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </JFXSlider>
                <Label layoutX="10.0" layoutY="343.0" text="Move X  &lt;--&gt;"/>
                <Label layoutX="10.0" layoutY="406.0" text="Move Y "/>
                <Label layoutX="63.0" layoutY="406.0" rotate="90.0" text="&lt;--&gt;"/>
            </children>

            <effect>
                <DropShadow height="25.0" radius="12.0" width="25.0"/>
            </effect>

        </AnchorPane>
        <!-- Zoom -->
        <JFXSlider fx:id="slider_zoome" blockIncrement="0.5" layoutX="765.0" layoutY="7.5" majorTickUnit="10.0"
                   max="200.0" min="1.0" minorTickCount="9" orientation="VERTICAL" prefHeight="785.0" prefWidth="25.0"
                   showTickLabels="true" showTickMarks="true" styleClass="jfx-slider"
                   value="1.0"/>
        <!-- fin Control panel -->
    </children>
</Pane>
